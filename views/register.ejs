<div class="mainBox">
  <form method="POST" action="/register">
    <h1>Create Your SmartBite Account!</h1>

  Name: <input id="name" type="text" name="name"><br>
  Email: <input id="email" type="email" name="email"><br>
  Password: <input id="pwd" type="password" name="password"><br>
 

  Diet Goal:
  <select name="diet_goal">
    <option value="">(optional)</option>
    <option value="lose_weight">Lose Weight</option>
    <option value="gain_muscle">Gain Muscle</option>
  </select><br>

  Budget Level:
  <select name="budget_level">
    <option value="">(optional)</option>
    <option value="low">Low</option>
    <option value="regular">Regular</option>
    <option value="fancy">Fancy</option>
  </select><br><br>

  <button>Create Account</button>
</form>


<% if (typeof message != "undefined"){ %>
  		 <h3><%=message%></h3>
<% } %>

<br><br>

<img id="foodishImg"
     style="max-width:300px; display:block; margin: 0 auto 15px; border-radius:10px;">


</div>


<script src="/js/scripts.js"></script>
</body>

